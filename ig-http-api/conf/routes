# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET         /                        controllers.HomeController.index

#URL that allow scrap user, you can pass queryParam recursive = true to scrap user too.
POST        /user/:userId                  controllers.UserScrapperController.scrapUser(userId: Long)
POST        /user/:userId/media            controllers.UserScrapperController.scrapMedia(userId: Long)
POST        /user/:userId/following        controllers.UserScrapperController.scrapFollowing(userId: Long)
POST        /user/:userId/followers        controllers.UserScrapperController.scrapFollowers(userId: Long)

#Used to retrieve only exisinting information, information that is already scrapped.
GET         /user/:userId                  controllers.UserController.user(userId: Long)
GET         /user/:userId/media            controllers.UserController.userMedia(userId: Long, next_max_id:Option[String])
GET         /user/:userId/resolve          controllers.UserController.userResolve(userId: Long, next_max_id:Option[String])
GET         /user/:userId/following        controllers.UserController.userFollowing(userId: Long, next_max_id:Option[String])
GET         /user/:userId/followers        controllers.UserController.userFollowers(userId: Long, next_max_id:Option[String])

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.versioned(path="/public", file: Asset)